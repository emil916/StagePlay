<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_AboutTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stage Play"
        
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_introduction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_AboutTitle"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Stage Play is a mobile application enabling users to read and enjoy dramas by adding visual depictions and cues, providing greater immersion than mere textual reading."
        android:textSize="15dp" 
        android:gravity="center">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_AboutTitle"
        android:layout_centerHorizontal="true"
        android:text="Version 1.0"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/et_team_member1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Satish Chandra"
        android:gravity="center"
        android:ems="10" />

    <EditText
        android:id="@+id/et_team_member2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_team_member1"
        android:layout_centerHorizontal="true"
        android:hint="Emil Abbasov"
        android:gravity="center"
        android:layout_marginTop="36dp"
        android:ems="10" />

    <EditText
        android:id="@+id/et_team_member3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_team_member2"
        android:layout_centerHorizontal="true"
        android:hint="Sagar Deo"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:ems="10" />

</RelativeLayout>
